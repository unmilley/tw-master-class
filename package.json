{
  "name": "@unmilley/tw-master-class",
  "version": "1.0.0",
  "description": "Master class - this class is used exclusively during the dev stage to define the boundaries of the elements.",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "author": "Alexandr Lyadov <hello@milley.uno> (https://milley.uno/)",
  "homepage": "https://github.com/unmilley/tw-master-class#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unmilley/tw-master-class.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "vitest dev",
    "lint": "eslint . && prettier -c .",
    "lint:fix": "eslint . --fix && prettier -w .",
    "prepack": "pnpm build",
    "release": "pnpm test && git push --follow-tags && npm publish",
    "test": "pnpm lint:fix && pnpm test:types",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "eslint-config-unjs": "^0.4.2",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "unbuild": "^3.0.1"
  },
  "packageManager": "pnpm@9.15.2",
  "keywords": [
    "tailwindcss",
    "tailwind",
    "plugin"
  ]
}
